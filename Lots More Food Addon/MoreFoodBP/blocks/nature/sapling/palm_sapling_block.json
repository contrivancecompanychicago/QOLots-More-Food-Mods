{
  "note": "Encoded to prevent copy cats, If you want help with your addon consider joining Legopitstop's Discord Server: https://discord.io/legopitstop",
  "format_version": "1.16.201",
  "minecraft:block": {
    "description": {
      "identifier": "morefood:palm_sapling_block",
      "register_to_creative_menu": false,
      "properties": {
        "morefood:stage": [
          0,
          1
        ]
      }
    },
    "components": {
      "minecraft:loot": "loot_tables/morefood/blocks/palm_sapling.json",
      "minecraft:block_light_absorption": 0,
      "minecraft:destroy_time": 0,
      "minecraft:explosion_resistance": 0,
      "minecraft:breakonpush": true,
      "minecraft:geometry": "geometry.template_cross",
      "minecraft:entity_collision": false,
      "minecraft:on_interact": {
        "condition": "query.get_equipped_item_name == 'bone_meal'",
        "event": "morefood:bone_meal_growth"
      },
      "minecraft:placement_filter": {
        "conditions": [
          {
            "block_filter": [
              "minecraft:grass",
              "minecraft:dirt",
              "minecraft:podzol"
            ],
            "allowed_faces": [
              "up"
            ]
          }
        ]
      },
      "minecraft:pick_collision": {
        "origin": [
          -6.5,
          0,
          -6.5
        ],
        "size": [
          13,
          12.5,
          13
        ]
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "morefood:palm_sapling",
          "render_method": "alpha_test"
        }
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('morefood:stage') == 0",
        "components": {
          "minecraft:ticking": {
            "looping": true,
            "range": [
              360,
              360
            ],
            "on_tick": {
              "event": "morefood:increase_stage",
              "target": "self"
            }
          }
        }
      },
      {
        "condition": "query.block_property('morefood:stage') == 1",
        "components": {
          "minecraft:ticking": {
            "looping": true,
            "range": [
              180,
              180
            ],
            "on_tick": {
              "event": "morefood:increase_stage",
              "target": "self"
            }
          }
        }
      }
    ],
    "events": {
      "morefood:bone_meal_growth": {
        "decrement_stack": {},
        "run_command": {
          "command": "particle minecraft:crop_growth_emitter ~ ~ ~"
        },
        "trigger": {
          "event": "morefood:increase_stage"
        }
      },
      "morefood:increase_stage": {
        "sequence": [
          {
            "condition": "query.block_property('morefood:stage') == 1",
            "trigger": {
              "event": "morefood:place_tree"
            }
          },
          {
            "condition": "query.block_property('morefood:stage') == 0",
            "set_block_property": {
              "morefood:stage": "1"
            }
          }
        ]
      },
      "morefood:place_tree": {
        "sequence": [
          {
            "run_command": {
              "target": "self",
              "command": [
                "setblock ~ ~ ~ air 0",
                "fill ~-2 ~ ~-2 ~2 ~5 ~2 air 0 destroy"
              ]
            },
            "set_block_at_pos": {
              "block_offset": [
                0,
                -1,
                0
              ],
              "block_type": "minecraft:dirt"
            }
          },
          {
            "randomize": [
              {
                "weight": 1,
                "run_command": {
                  "command": "structure load morefoodtree:palm_tree ~-3 ~ ~-3",
                  "target": "self"
                }
              },
              {
                "weight": 1,
                "run_command": {
                  "command": "structure load morefoodtree:palm_tree2 ~-2 ~ ~-2",
                  "target": "self"
                }
              }
            ]
          }
        ]
      }
    }
  }
}