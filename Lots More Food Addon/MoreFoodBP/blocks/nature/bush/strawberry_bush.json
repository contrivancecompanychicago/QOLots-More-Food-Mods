{
  "note": "Encoded to prevent copy cats, If you want help with your addon consider joining Legopitstop's Discord Server: https://discord.io/legopitstop",
  "format_version": "1.16.201",
  "minecraft:block": {
    "description": {
      "identifier": "morefood:strawberry_bush",
      "register_to_creative_menu": false,
      "properties": {
        "morefood:stage": [
          0,
          1,
          2,
          3
        ]
      }
    },
    "components": {
      "minecraft:loot": "loot_tables/morefood/blocks/strawberry.json",
      "minecraft:block_light_absorption": 0,
      "minecraft:explosion_resistance": 0,
      "minecraft:breakonpush": true,
      "minecraft:entity_collision": false,
      "minecraft:on_interact": {
        "event": "morefood:on_interact"
      },
      "minecraft:placement_filter": {
        "conditions": [
          {
            "block_filter": [
              "minecraft:grass",
              "minecraft:dirt",
              "minecraft:podzol"
            ],
            "allowed_faces": [
              "up"
            ]
          }
        ]
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('morefood:stage') == 0",
        "components": {
          "minecraft:geometry": "geometry.template_cross",
          "minecraft:destroy_time": 0,
          "minecraft:entity_collision": false,
          "minecraft:ticking": {
            "looping": true,
            "range": [
              840,
              840
            ],
            "on_tick": {
              "event": "morefood:increase_stage"
            }
          },
          "minecraft:pick_collision": {
            "origin": [
              -3.2,
              0,
              -3.2
            ],
            "size": [
              6.4,
              8,
              6.4
            ]
          },
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:strawberry_bush_stage0",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('morefood:stage') == 1",
        "components": {
          "minecraft:geometry": "geometry.template_cross",
          "minecraft:destroy_time": 0.3,
          "minecraft:entity_collision": false,
          "minecraft:ticking": {
            "looping": true,
            "range": [
              840,
              840
            ],
            "on_tick": {
              "event": "morefood:increase_stage"
            }
          },
          "minecraft:pick_collision": {
            "origin": [
              -6.2,
              0,
              -6.2
            ],
            "size": [
              12.4,
              16,
              12.4
            ]
          },
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:strawberry_bush_stage1",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('morefood:stage') == 2",
        "components": {
          "minecraft:loot": "loot_tables/morefood/blocks/mature_strawberry1.json",
          "minecraft:geometry": "geometry.template_cross",
          "minecraft:destroy_time": 0.3,
          "minecraft:entity_collision": false,
          "minecraft:ticking": {
            "looping": true,
            "range": [
              840,
              840
            ],
            "on_tick": {
              "event": "morefood:increase_stage"
            }
          },
          "minecraft:pick_collision": {
            "origin": [
              -6.2,
              0,
              -6.2
            ],
            "size": [
              12.4,
              16,
              12.4
            ]
          },
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:strawberry_bush_stage2",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('morefood:stage') == 3",
        "components": {
          "minecraft:loot": "loot_tables/morefood/blocks/mature_strawberry2.json",
          "minecraft:geometry": "geometry.template_cross",
          "minecraft:destroy_time": 0.3,
          "minecraft:entity_collision": false,
          "minecraft:pick_collision": {
            "origin": [
              -6.2,
              0,
              -6.2
            ],
            "size": [
              12.4,
              16,
              12.4
            ]
          },
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:strawberry_bush_stage3",
              "render_method": "alpha_test"
            }
          }
        }
      }
    ],
    "events": {
      "morefood:on_interact": {
        "sequence": [
          {
            "condition": "query.get_equipped_item_name =='bone_meal'",
            "trigger": {
              "event": "morefood:bone_meal_growth"
            }
          },
          {
            "condition": "query.block_property('morefood:stage') == 2",
            "spawn_loot": {
              "table": "loot_tables/morefood/on_interact/strawberry_bush_stage2.json"
            },
            "set_block_property": {
              "morefood:stage": "1"
            },
            "play_sound": {
              "sound": "block.sweet_berry_bush.pick"
            }
          },
          {
            "condition": "query.block_property('morefood:stage') == 3",
            "spawn_loot": {
              "table": "loot_tables/morefood/on_interact/strawberry_bush_stage3.json"
            },
            "set_block_property": {
              "morefood:stage": "1"
            },
            "play_sound": {
              "sound": "block.sweet_berry_bush.pick"
            }
          }
        ]
      },
      "morefood:bone_meal_growth": {
        "trigger": {
          "event": "morefood:increase_stage"
        },
        "decrement_stack": {},
        "run_command": {
          "command": "particle minecraft:crop_growth_emitter ~ ~ ~"
        }
      },
      "morefood:increase_stage": {
        "sequence": [
          {
            "condition": "query.block_property('morefood:stage') == 2",
            "set_block_property": {
              "morefood:stage": "3"
            }
          },
          {
            "condition": "query.block_property('morefood:stage') == 1",
            "set_block_property": {
              "morefood:stage": "2"
            }
          },
          {
            "condition": "query.block_property('morefood:stage') == 0",
            "set_block_property": {
              "morefood:stage": "1"
            }
          }
        ]
      }
    }
  }
}