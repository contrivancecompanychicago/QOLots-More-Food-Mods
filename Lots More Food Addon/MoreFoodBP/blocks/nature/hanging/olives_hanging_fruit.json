{
  "note": "Encoded to prevent copy cats, If you want help with your addon consider joining Legopitstop's Discord Server: https://discord.io/legopitstop",
  "format_version": "1.16.201",
  "minecraft:block": {
    "description": {
      "identifier": "morefood:olives_hanging_fruit",
      "register_to_creative_menu": false,
      "properties": {
        "morefood:stage": [
          0,
          1,
          2,
          3
        ]
      }
    },
    "components": {
      "minecraft:loot": "loot_tables/morefood/blocks/olives.json",
      "minecraft:block_light_absorption": 0,
      "minecraft:explosion_resistance": 0,
      "minecraft:geometry": "geometry.template_cross",
      "minecraft:breakonpush": true,
      "minecraft:entity_collision":false,
      "minecraft:destroy_time": 0.3,
      "minecraft:placement_filter": {
        "conditions": [
          {
            "block_filter": [
              "minecraft:leaves",
              "minecraft:leaves2"
            ],
            "allowed_faces": [
              "down"
            ]
          }
        ]
      },
      "minecraft:pick_collision": {
        "origin": [-6.2,8,-6.2],
        "size": [12.4,8,12.4]
      },
      "minecraft:ticking": {
        "looping": true,
        "range": [840,840],
        "on_tick": {
          "event": "morefood:increase_stage",
          "target": "self"
        }
      },
      "minecraft:on_interact": {
        "event": "morefood:on_interact"
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('morefood:stage') == 0",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:olives_hanging_fruit_stage0",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('morefood:stage') == 1",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:olives_hanging_fruit_stage1",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('morefood:stage') == 2",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:olives_hanging_fruit_stage2",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('morefood:stage') == 3",
        "components": {
          "minecraft:loot": "loot_tables/morefood/blocks/mature_olives.json",
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:olives_hanging_fruit_stage3",
              "render_method": "alpha_test"
            }
          }
        }
      }
    ],
    "events": {
      "morefood:on_interact": {
        "sequence": [
          {
            "condition": "query.get_equipped_item_name =='bone_meal'",
            "decrement_stack": {},
            "run_command": {
              "command": "particle minecraft:crop_growth_emitter ~ ~ ~"
            },
            "trigger": {
              "event": "morefood:increase_stage"
            }
          },
          {
            "condition": "query.block_property('morefood:stage') == 3",
            "spawn_loot": {
              "table": "loot_tables/morefood/on_interact/olives.json"
            },
            "set_block_property": {
              "morefood:stage": "0"
            },
            "play_sound": {
              "sound": "block.sweet_berry_bush.pick"
            }
          }
        ]
      },
      "morefood:increase_stage": {
        "sequence": [
          {
            "condition": "query.block_property('morefood:stage') == 2",
            "set_block_property": {
              "morefood:stage": "3"
            }
          },
          {
            "condition": "query.block_property('morefood:stage') == 1",
            "set_block_property": {
              "morefood:stage": "2"
            }
          },
          {
            "condition": "query.block_property('morefood:stage') == 0",
            "set_block_property": {
              "morefood:stage": "1"
            }
          }
        ]
      }
    }
  }
}